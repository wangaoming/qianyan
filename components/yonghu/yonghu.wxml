<!--components/yonghu/yonghu.wxml-->
<view style="width: 100%;display: flex;flex-direction: column;"wx:for="{{list}}" >
 <view class="yonghu" >
 <view class="img1" style="border:{{item.is == '1'?'2px solid pink':'2px solid #5d9cec'}};" >
        <image class="touxiang" src="{{item.img}}" bindtap="inforHandle"></image>
      </view>
      <text class="biaoshi"  style="background-color:{{item.is == '1'?' pink':' #5d9cec'}};" >{{item.biaoshi}}</text>

      <view class="middle" style="width: 470rpx;margin-left: 20rpx;display: flex;flex-direction: column;">
<view class="" style="font-size: 28rpx;" hover-class="none" hover-stop-propagation="false">
    {{item.nicheng}}
</view>
<view class="two" style="margin-top: 15rpx;display: flex;flex-direction: row;align-items: center;">
<view class="" style="border-radius: 2rpx;;line-height: 25rpx;color: #fd5484;text-align: center;font-size: 15rpx;width: 70rpx;height: 25rpx;background-color: #ffccda;" hover-class="none" hover-stop-propagation="false">
{{item.age}}
</view>

<view class="" style="justify-content: center;display: flex;flex-direction: row;align-items: center;margin-left: 10rpx;border-radius: 2rpx;line-height: 25rpx;color: white;text-align: center;font-size: 15rpx;width: 70rpx;height: 25rpx;background-color: #b89aff;" hover-class="none" hover-stop-propagation="false">
   <image class="" style="width: 12rpx;height: 15rpx;" src="/images/zuixin/33.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
     {{item.area}}
</view>
</view>
      </view>


      <view class="" style="font-size: 20rpx;color: #888;" hover-class="none" hover-stop-propagation="false">
        {{item.hour}}活跃
      </view>


</view>
   

<view style="width: 100%;height: 2rpx;background-color: #eee;" hidden="{{item.hidden == '1'}}">
    
</view>
  

  
</view>
  
