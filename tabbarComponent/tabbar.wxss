.tabbar_box{
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 999;
    width: 100%;
    height: 110rpx;
    box-shadow: 0 0 2px rgba(0, 0, 0, 0.1);
}
.tabbar_box.iphoneX-height{
    padding-bottom: 66rpx;
}
.middle-wrapper{
  position: absolute;
  right: 310rpx;
  bottom: 0;
  background-color: #fff;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
}
.middle-wrapper.iphoneX-height{
  bottom: 66rpx;
}
.tabbar_nav{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    height: 100%;
    margin-bottom: 0rpx;
    position: relative;
}
.tabbar_icon{
    width: 45rpx;
    height:45rpx;
}
.special-wrapper{
  position: absolute;
  top: -26rpx;
  width: 125rpx;
  box-shadow: 0px -2px 3px	#DCDCDC;
  height: 125rpx;
  border-radius: 50%;
  border-top: 2rpx solid #f2f2f3;
  background-color: #fff;
  text-align: center;
  box-sizing: border-box;
  padding: 6rpx;
  box-shadow: #eee;
}
.special-wrapper .tabbar_icon{
    width: 130rpx;
    height: 130rpx;
    margin-left: -10rpx;
    margin-top: -15rpx;

}

.special-text-wrapper{
  width: 56rpx;
  height: 56rpx;
}
.text{
  margin-top: 25rpx;
}