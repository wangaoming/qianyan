      </view>
        
      <image style="padding-left:10rpx ;width:30rpx;height:15px;" class="" src="/images/shetuan/换一换.png" mode="aspectFit|aspectFill|widthFix" lazy-load="false" binderror="" bindload="" />
  </view>

