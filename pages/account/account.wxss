/* 顶部标签 */
.navbar{
  flex: none;
  display: flex;
  width: 90%;
  border-radius: 14rpx;
  background: #eee;
  margin-left: 36rpx;
  height: 75rpx;
  align-items: center;
  margin-top: 10rpx;
  z-index: 99;
  
}
.navbar .item.active{
  
  color: #b89aff;
}
.navbar .item.active:after{
 content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  width: 320rpx;
  height: 60rpx;
 border-radius: 14rpx;
 margin-left: 8rpx;
 margin-bottom:6rpx ;
  background-color: white;
  z-index: -999;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 75rpx;
  color: #c5c5c5;
  
}
