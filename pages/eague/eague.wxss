}
.title{
    display: flex;
    flex-direction: row;
    align-items: center;
    z-index: 999;
    position: fixed;
    width: 100%;
    margin-top: -40rpx;
    background: white;
    height:120rpx ;
    border-bottom: 1px soild #eee;
    
}
.title image{
  margin-bottom: 20rpx;
  width: 50rpx;
  height:50rpx;
  margin-top: 40rpx;

}
.title text{
    font-size: 28rpx;
   margin-top: 0rpx;
