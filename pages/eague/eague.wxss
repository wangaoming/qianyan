}
.love{
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 22rpx;
    color: #b99bff;
}
/*导航栏*/
.navbar{
    /* flex: none; */
    display: flex;
    align-items: center;
    background: #fff;
    height:80rpx;
    
    
  
  }
.navbar .item{
    position: relative;
    color: #888888;
    text-align: center;
    line-height: 80rpx;
    font-size: 28rpx;
     width: 60rpx;
    
    
    
  }
  .item:nth-child(1){
    margin-left: 30rpx;
  }
  .item:nth-child(2){
    margin-left: 40rpx;
  }.item:nth-child(3){
    margin-left: 40rpx;
  }.item:nth-child(4){
    margin-left: 40rpx;
  }.item:nth-child(5){
    margin-left: 40rpx;
  }
  .navbar .item.active{
    color: #b99bff;
    
  }
  .navbar .item.active:after{
    content: "";
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 4rpx;
    background:linear-gradient(to right,pink,#a02bc2)
  }